@model IEnumerable<SalesWebMVC.Models.SalesRecord>
@{
    ViewData["Title"] = "Simple Search";
}

<h1>@ViewData["Title"]</h1>

<nav class="navbar navbar-dark bg-dark my-2 rounded">
    <div class="container-fluid">
        <form class="form-inline" role="search">
            <div class="form-group">
                <div class="form-group">
                    <label for="minDate" class="font-weight-bold">Min Date</label>
                    <input type="date" class="form-control ml-2" name="minDate" value="@ViewData["minDate"]"/>
                </div>
                <div class="form-group ml-4">
                    <label for="maxDate" class="font-weight-bold">Max Date</label>
                    <input type="date" class="form-control ml-2" name="maxDate" value="@ViewData["maxDate"]" />
                </div>
            </div>
            <button type="submit" class="btn btn-primary ml-2">Filter</button>
        </form>
    </div>
</nav>

<div class="card">
    <div class="card-header bg-primary">
        <h5 class="card-title text-white mb-0">Total Sales = @Model.Sum(obj => obj.Amount).ToString("F2")</h5>
    </div>
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="table-success">
                    <th>@Html.DisplayNameFor(model => model.ID)</th>
                    <th>@Html.DisplayNameFor(model => model.Date)</th>
                    <th>@Html.DisplayNameFor(model => model.Seller)</th>
                    <th>@Html.DisplayNameFor(model => model.Seller.Department)</th>
                    <th>@Html.DisplayNameFor(model => model.Amount)</th>
                    <th>@Html.DisplayNameFor(model => model.Status)</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.ID)</td>
                        <td>@Html.DisplayFor(modelItem => item.Date)</td>
                        <td>@Html.DisplayFor(modelItem => item.Seller.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Seller.Department.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

