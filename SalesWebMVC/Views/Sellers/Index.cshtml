@model IEnumerable<SalesWebMVC.Models.Seller>
@{
    ViewData["Title"] = "Sellers";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-success">Create New&ensp;<i class="fa fa-plus"></i></a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="table-success">
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.BirthDate)</th>
            <th>@Html.DisplayNameFor(model => model.BaseSalary)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
            {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Email)</td>
            <td>@Html.DisplayFor(modelItem => item.BirthDate)</td>
            <td>@Html.DisplayFor(modelItem => item.BaseSalary)</td>
            <td class="justify-content-between">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ID">EDIT&ensp;<i class="fa fa-edit"></i></a>
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.ID">DETAILS&ensp;<i class="fa fa-info-circle"></i></a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">DELETE&ensp;<i class="fa fa-trash-alt"></i></a>
            </td>
        </tr>
            }
    </tbody>
</table>

